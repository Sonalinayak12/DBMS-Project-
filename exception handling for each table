1) crime details
DECLARE
BEGIN
    INSERT INTO CriminalDetails (Criminal_ID, Name, Age, Gender, Address, Contact_Number)
    VALUES (101, 'Duplicate Raj', 30, 'Male', 'Test Address', '9000000000');
    
    DBMS_OUTPUT.PUT_LINE('Record inserted successfully into CriminalDetails.');
EXCEPTION
    WHEN DUP_VAL_ON_INDEX THEN
        DBMS_OUTPUT.PUT_LINE('Error: Duplicate Criminal_ID detected.');
    WHEN OTHERS THEN
        DBMS_OUTPUT.PUT_LINE('Error inserting CriminalDetails: ' || SQLERRM);
END;
OUTPUT:
Record inserted successfully into CriminalDetails.


 
/
2)crime records
DECLARE
BEGIN
    INSERT INTO CrimeRecord (Crime_ID, Type_of_Crime, Location, Date, Time, Description, Criminal_ID)
    VALUES (1009, 'Theft', 'Trichy Bus Stand', SYSDATE, TO_DATE('12:45:00','HH24:MI:SS'),
            'Pickpocket attempt', 999);  -- wrong Criminal_ID

    DBMS_OUTPUT.PUT_LINE('Crime record inserted successfully.');
EXCEPTION
    WHEN DUP_VAL_ON_INDEX THEN
        DBMS_OUTPUT.PUT_LINE('Error: Duplicate Crime_ID detected.');
    WHEN OTHERS THEN
        DBMS_OUTPUT.PUT_LINE('Error inserting CrimeRecord: ' || SQLERRM);
END;
OUTPUT:
Error inserting CrimeRecord: ORA-02291: integrity constraint (CRIMINALDETAILS.FK) violated - parent key not found


/

